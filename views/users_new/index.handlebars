
<div class="container">
  <h1>New User</h1>

  <form action="/registration/new" method="post">
    <div class="form-group">
      <label for="fname">First Name:</label>
      <input type="text" class="form-control" id="fname" name="fname" required="true">
    </div>
    <div class="form-group">
      <label for="lname">Last Name:</label>
      <input type="lname" class="form-control" id="lname" name="lname" required="true">
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="email" required="true">
    </div>
    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" class="form-control" id="pwd" name="password" required="true">
    </div>
    
    <button type="submit" class="btn btn-default">Submit</button>
    {{{renderFlashMsg}}} 
  </form>

</div>
